<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_brown</item>
        <item name="colorPrimaryDark">@color/bg_dark_brown</item>
        <item name="colorAccent">@color/bg_light_brown</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">-->
        <!--<item name="spinBars">true</item>-->
        <!--<item name="color">@android:color/white</item>-->
    <!--</style>-->

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    ////////////////////////////////////////////////////////////////////////////////////////

    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MMV" parent="@style/MM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MWV" parent="@style/MW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MWH" parent="@style/MW">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WWV" parent="@style/WW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WMV" parent="@style/WM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WWH" parent="@style/WW">
        <item name="android:orientation">horizontal</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////////////

    <style name="WW.VStrut">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MWH.Navigation_LL">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/bg_brown</item>
    </style>

    <style name="MWV.Header_DataBlock_LL">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MW.Header_Data_TV">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////////////

    <style name="MW.LoginActivity_ET">
        <item name="android:padding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
        <item name="android:background">@drawable/edittext_states</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_brown_text</item>
        <item name="android:textColorHint">@color/dark_brown_text</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////////////

    <style name="MMV.LoginActivity_Container_LL">
        <!--<item name="android:background">@color/black</item>-->
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/login_main_bg</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MMV.LoginActivity_MainWindow_LL">
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/window</item>
    </style>

    <style name="WW.LoginActivity_Title_TV">
        <item name="android:layout_marginTop">5dp</item>
        <!--<item name="android:layout_marginTop">20dp</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_brown_text</item>
        <item name="android:text">@string/enter_data_text</item>
    </style>

    <style name="MW.LoginActivity_ET.LoginActivity_UserEmail_ET">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/user_email_hint</item>
    </style>

    <style name="MW.LoginActivity_ET.LoginActivity_UserPassword_ET">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/user_password_hint</item>
    </style>

    <style name="WW.LoginActivity_EnterAsAnonym_CHB">
        <!--<item name="android:layout_marginTop">18dp</item>-->
        <!--<item name="android:layout_marginTop">10dp</item>-->
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/dark_brown_text</item>
        <item name="android:text">@string/enter_as_anonym_text</item>
        <item name="android:button">@drawable/auth_checkbox_selector</item>
    </style>

    <style name="WW.LoginActivity_AuthMsg_TV">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WWV.LoginActivity_Button_LL">
        <item name="android:background">@drawable/rect_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MWV.LoginActivity_ButtonData_LL">
        <item name="android:background">@drawable/enter_btn_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MW.LoginActivity_Button_TV">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_brown_text</item>
        <item name="android:text">@string/enter_text</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////////////

    <style name="MMV.Tab_Content_LL">
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MWV.MapSettings_SendUrl_RL">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="MW.MapSettings_SendUrl_ET">
        <item name="android:padding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WW.MapSettings_Save_BTN">
        <item name="android:layout_below">@+id/MapSettings_SendUrl_ET</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/save_text</item>
    </style>

</resources>
